<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/solution_vw"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_below="@+id/result_vw"


        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:layout_toStartOf="@+id/buttons_layout"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textSize="32dp">

    </TextView>

    <TextView
        android:id="@+id/result_vw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        

        android:layout_margin="16dp"
        android:layout_marginEnd="16dp"
        android:layout_toStartOf="@+id/buttons_layout"
        android:text="0"
        android:textAlignment="textEnd"

        android:textColor="@color/black"
        android:textSize="60dp">

    </TextView>




    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_alignParentRight="true"
        android:gravity = "center"
        android:background="#79B8B6B6"
        android:paddingVertical="8dp"
        android:id="@+id/buttons_layout">
        


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:orientation="vertical">

            <Button
                android:id="@+id/button_ac"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="8dp"
                android:backgroundTint="#FFC107"
                android:text="AC"
                android:textColor="@color/white"
                android:textSize="20dp"
                app:cornerRadius="36dp">

            </Button>

            <Button
                android:id="@+id/button_open_bracket"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="8dp"
                android:backgroundTint="#FFC107"
                android:text="("
                android:textColor="@color/white"
                android:textSize="32dp"
                app:cornerRadius="36dp">

            </Button>

            <Button
                android:id="@+id/button_close_bracket"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="8dp"
                android:backgroundTint="#FFC107"
                android:text=")"
                android:textColor="@color/white"
                android:textSize="32dp"
                app:cornerRadius="36dp">

            </Button>

            <Button
                android:id="@+id/button_del"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="8dp"
                android:backgroundTint="#FFC107"
                android:text="/"
                android:textColor="@color/white"
                android:textSize="32dp"
                app:cornerRadius="36dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            
            android:orientation = "vertical">
            <Button
                android:id="@+id/button_7"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:layout_margin="8dp"

                android:text="7">

            </Button>
            <Button
                android:id="@+id/button_8"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:layout_margin="8dp"

                android:text="8">

            </Button>
            <Button
                android:id="@+id/button_9"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:layout_margin="8dp"

                android:text="9">

            </Button>
            <Button
                android:id="@+id/button_mult"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:layout_margin="8dp"
                android:backgroundTint="#FFC107"
                android:text="*">
            </Button>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            
            android:orientation = "vertical">
            <Button
                android:id="@+id/button_4"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:layout_margin="8dp"
                android:text="4">

            </Button>
            <Button
                android:id="@+id/button_5"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:layout_margin="8dp"
                android:text="5">

            </Button>
            <Button
                android:id="@+id/button_6"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:layout_margin="8dp"
                android:text="6">

            </Button>
            <Button
                android:id="@+id/button_minus"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:layout_margin="8dp"
                android:backgroundTint="#FFC107"
                android:text="-">
            </Button>
        </LinearLayout>
        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        
        android:orientation = "vertical">
        <Button
            android:id="@+id/button_1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:cornerRadius="36dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:textSize="32dp"
            android:textColor="@color/white"
            android:layout_margin="8dp"
            android:text="1">

        </Button>
        <Button
            android:id="@+id/button_2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:cornerRadius="36dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:textSize="32dp"
            android:textColor="@color/white"
            android:layout_margin="8dp"
            android:text="2">

        </Button>
        <Button
            android:id="@+id/button_3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:cornerRadius="36dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:textSize="32dp"
            android:textColor="@color/white"
            android:layout_margin="8dp"
            android:text="3">

        </Button>
        <Button
            android:id="@+id/button_plus"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:cornerRadius="36dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:textSize="32dp"
            android:textColor="@color/white"
            android:layout_margin="8dp"
            android:backgroundTint="#FFC107"
            android:text="+">
        </Button>
    </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            
            android:orientation = "vertical">
            <Button
                android:id="@+id/button_clear"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:layout_margin="8dp"
                android:text="C">

            </Button>
            <Button
                android:id="@+id/button_0"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:layout_margin="8dp"
                android:text="0">

            </Button>
            <Button
                android:id="@+id/button_comma"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:layout_margin="8dp"
                android:text=".">

            </Button>
            <Button
                android:id="@+id/button_equal"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:layout_margin="10dp"
                android:backgroundTint="#FF5722"
                android:text="=">
            </Button>
        </LinearLayout>

    </LinearLayout>




</RelativeLayout>